<head>
  <meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>Agro-Point</title>
<!-- <link rel="stylesheet" href="/css/login_style.css"> -->
<link rel="stylesheet" href="/css/register_style.css">
<link rel="stylesheet" href="/css/stars.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet"/>
<style>
  body {
    min-height: 100vh;
    overflow-y: auto;
    overflow-x: hidden;
  }
</style>
</head>
<section class="container"></section>
<nav class="navbar navbar-dark bg-dark">
  <a class="navbar-brand" href="/api/user">
    <img src="/images/new_logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
    Agro-Point
  </a>
</nav>

<div class="container-fluid px-1 py-5 mx-auto">
  <div class="row d-flex justify-content-center">
    <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
      <h3>UpdateReview</h3>
          <div class="card">
            <form method="POST" action="/api/comment/updateComment/<%= pid %>" id="reviewUpdateForm">
                <div class="row justify-content-between text-left">
                    
                  <div class="row justify-content-between text-left">
                    <div class="form-group col-sm-12 flex-column d-flex"> <label
                        class="form-control-label px-3">Review<span class="text-danger"> *</span></label> <input
                        type="text" name="comment" placeholder="Review" value="<%= comment.comment %>"
                        required></p>
                    </div>
                  </div>
                  <div class="row justify-content-center">
                    <div class="ratings">
                        <label class="form-control-label px-3"><h4 style="display:inline;background-color:rgb(93, 243, 73)">Previous Rating:</h4>
                        <p>
                            <% for (var i = 0; i < 5; i++) { %>
                                <span class="fa fa-star<%= (i < comment.rating - 0.5)? '' : '-o'%>"></span>
                            <% } %>
                        </p>
                    </div>
                  </div>
                  </div>
                  <div class="row justify-content-center">
                    <h4 class="mr-3">Your Rating: <span class="text-danger"> *</span></h4>
                    <div class="star-rating">
                        <input type="radio" id="5-stars" name="rating" value="5" required/>
                        <label for="5-stars" class="fa fa-star"></label>
                        <input type="radio" id="4-stars" name="rating" value="4" required/>
                        <label for="4-stars" class="fa fa-star"></label>
                        <input type="radio" id="3-stars" name="rating" value="3" required/>
                        <label for="3-stars" class="fa fa-star"></label>
                        <input type="radio" id="2-stars" name="rating" value="2" required/>
                        <label for="2-stars" class="fa fa-star"></label>
                        <input type="radio" id="1-star" name="rating" value="1" required/>
                        <label for="1-star" class="fa fa-star"></label>
                      </div>        
                  </div>
                    <div class="row justify-content-center"><button class="submit btn-block col-sm-8 btn-success" type="submit"
                        name="submit" value="Update" required>Update</button> </div>
                    <div class="row justify-content-center"><button class="submit btn-block col-sm-4 btn-secondary"
                      onClick="location.href = '/api/product/<%= pid %>'">Cancel</button></div>
            </form>
          </div>
    </div>
  </div>
</div>
